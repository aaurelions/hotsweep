{
  "name": "@hotsweep/types",
  "version": "0.0.1",
  "description": "TypeScript types for HotSweep SDK",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./init": {
      "types": "./dist/init.types.d.ts",
      "import": "./dist/init.types.mjs",
      "require": "./dist/init.types.js"
    },
    "./address": {
      "types": "./dist/address.types.d.ts",
      "import": "./dist/address.types.mjs",
      "require": "./dist/address.types.js"
    },
    "./balance": {
      "types": "./dist/balance.types.d.ts",
      "import": "./dist/balance.types.mjs",
      "require": "./dist/balance.types.js"
    },
    "./transfer": {
      "types": "./dist/transfer.types.d.ts",
      "import": "./dist/transfer.types.mjs",
      "require": "./dist/transfer.types.js"
    },
    "./config": {
      "types": "./dist/config.types.d.ts",
      "import": "./dist/config.types.mjs",
      "require": "./dist/config.types.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "echo \"No tests found\" && exit 0",
    "test:unit": "echo \"No tests found\" && exit 0",
    "test:integration": "echo \"No tests found\" && exit 0",
    "test:coverage": "echo \"No tests found\" && exit 0",
    "clean": "rm -rf dist node_modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && prettier --check \"**/*.{ts,js,json,md}\" \"!dist/**\" \"!coverage/**\"",
    "lint:fix": "eslint . --fix && prettier --write \"**/*.{ts,js,json,md}\" \"!dist/**\" \"!coverage/**\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" \"!dist/**\" \"!coverage/**\""
  },
  "keywords": [
    "hotsweep",
    "types",
    "typescript",
    "hd-wallet",
    "ethereum"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hotsweep/hotsweep.git",
    "directory": "packages/types"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsdown": "^0.18.2",
    "typescript": "^5.9.3",
    "viem": "^2.43.3"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  }
}
